#include <iostream>
using namespace std;
struct NumbersInfo
{
    int Number1;
    int Number2;
    int Number3;
};
NumbersInfo ReadNumber()
{
    NumbersInfo Info;
    cout << "Enter Number1 ?" << endl;
    cin >> Info.Number1;
    cout << "Enter Number2 ?" << endl;
    cin >> Info.Number2;
    cout << "Enter Number3 ?" << endl;
    cin >> Info.Number3;
    return Info;
}
int CheckMaxOf2(NumbersInfo Info)
{
    if (Info.Number1 > Info.Number2)
        if (Info.Number1 > Info.Number3)
            return Info.Number1;
        else
            return Info.Number3;

        else
        if (Info.Number2 > Info.Number3)
               return Info.Number2;
        else

       return Info.Number3;
}
void PrintResults(int Max)
{
    cout << "Max Number: " << Max << endl;
}
int main()
{
    PrintResults(CheckMaxOf2(ReadNumber()));
    return 0;
}


