#include <iostream>
#include <cmath>
using namespace std;

float ReadDiameter()
{
	float D;
	cout << "Enter D ? " << endl;
	cin >> D;
	return D;
}
float CircleAreaThroughDiameter(float D)
{
	const float PI = 3.14;
	return (PI * pow(D, 2)) / 4;
}
void PrintResults(float Area)
{
	cout << "Circle Area Through Diameter = " <<Area << endl;
}
int main()
{
  
	PrintResults(CircleAreaThroughDiameter(ReadDiameter()));

	

	return 0;
}


