#include <iostream>
#include <cmath>
using namespace std;
float ReadA()
{
	float A;
	cout << "Enter A ? " << endl;
	cin >> A;
	return A;
}
float CircleAreaInscribedinaSquare(float A)
{
	const float PI = 3.14;
	return (PI * pow(A, 2)) / 4;
}
void PrintResults(float Area)
{
	cout << "Circle Area Inscribed in a Square = " <<Area<< endl;

}
int main()
{
	

	PrintResults(CircleAreaInscribedinaSquare(ReadA()));



	return 0;
}


