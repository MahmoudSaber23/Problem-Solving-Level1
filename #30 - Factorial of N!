#include <iostream>
#include <string>
using namespace std;

int ReadPositiveNumber(string Message)
{
    int Number;
    do
    {
        cout << Message << endl;
        cin >> Number;

    } while (Number < 0);

    return Number;
}
int FactorialOfN(int N)
{
    int Factorial = 1;
    for (int i = N; i >= 1; i--)
    {
        Factorial *= i;
    }
    return Factorial;
}
int main()
{
    cout << FactorialOfN(ReadPositiveNumber("Please Enter a Positive Number? ")) << endl;

    return 0;
}


