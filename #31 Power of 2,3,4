#include <iostream>
#include <string>
using namespace std;
int ReadNumber()
{
    int Number;
    cout << "Enter Number ? " << endl;
    cin >> Number;
    return Number;
}
void PowerOf2_3_4(int Number)
{
    int A, B, C;
    A = pow(Number, 2);
    B = pow(Number, 3);
    C = pow(Number, 4);
    cout << A << " " << B << " "  << C << endl;

}
int main()
{
    
    PowerOf2_3_4(ReadNumber());
   

    return 0;
}


