#include <iostream>
#include <string>
using namespace std;

float ReadPositiveNumber(string Message)
{
    int Number;
    do {
    
        cout << Message << endl;
        cin >> Number;

    } while (Number <= 0);

        return Number;
}
float TotalMonths(float LoanAmount, float MonthlyInstallment)
{
    return (float)(LoanAmount / MonthlyInstallment);
}
int main()
{
    float LoanAmount = ReadPositiveNumber("Please Enter Loan Amount? ");
    float MonthlyPayment = ReadPositiveNumber("Please Enter Monthly Installment? ");

    cout << "\n" << "Total Months To Pay = " << TotalMonths(LoanAmount, MonthlyPayment);
    cout << endl;
      
    return 0;
}


